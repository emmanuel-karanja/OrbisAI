FROM python:3.11-slim

WORKDIR /app

# Install build tools and network tools with retry logic
RUN set -e; \
    for i in 1 2 3; do \
        apt-get update && \
        apt-get install -y --no-install-recommends \
            build-essential \
            curl \
            iputils-ping && \
        rm -rf /var/lib/apt/lists/* && break || sleep 5; \
    done

# Upgrade pip to support --resume-retries
RUN pip install --no-cache-dir --upgrade "pip>=23.2"

# Copy requirements file separately to leverage Docker layer caching
COPY requirements.txt .

# Install Python dependencies with retries and resumption
RUN set -e; \
    mkdir -p /root/.cache/pip/wheels; \
    for i in 1 2 3; do \
        pip install \
            --upgrade \
            --cache-dir=/root/.cache/pip \
            --find-links=/root/.cache/pip/wheels \
            --no-cache-dir \
            --retries 3 \
            --resume-retries 3 \
            --extra-index-url https://download.pytorch.org/whl/cpu \
            -r requirements.txt && break || sleep 10; \
    done

# Copy application code
COPY main.py .
COPY models.py .
COPY services.py .
COPY logger.py .
COPY extract.py .
COPY redis_client.py .

# Optionally include static or config files
# COPY static/ ./static/

# Expose FastAPI port
EXPOSE 8001

# Run the FastAPI app
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8001"]
