FROM python:3.11-slim

WORKDIR /app

# Install basic tools needed by some packages (like numpy)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install everything (CPU-only)
COPY requirements.txt .

# Upgrade pip and install all requirements with CPU-safe PyTorch
RUN pip install --no-cache-dir --upgrade pip \
 && pip install --no-cache-dir \
    --extra-index-url https://download.pytorch.org/whl/cpu \
    -r requirements.txt

# Preload the model so itâ€™s cached in the image
RUN python -c "from sentence_transformers import SentenceTransformer; SentenceTransformer('all-MiniLM-L6-v2')"

# Copy your app
COPY ingest.py .

# Run it
CMD ["uvicorn", "ingest:app", "--host", "0.0.0.0", "--port", "8001"]
